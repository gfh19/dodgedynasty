				<div>
					@Html.LabelFor(m => m.DraftYear): @Html.TextBoxFor(m => m.DraftYear, new { @class = "draft-year", maxLength = "4" })
					@Html.LabelFor(m => m.DraftLocation): @Html.TextBoxFor(m => m.DraftLocation, new { @class = "draft-location", maxLength = "50" })
				</div>
				<div>@Html.ValidationMessageFor(m => m.DraftYear)</div>
				<div>@Html.ValidationMessageFor(m => m.DraftLocation)</div>
				<div>
					@Html.LabelFor(m => m.Format): @Html.DropDownListFor(m => m.Format, Model.GetDraftFormatItems(), new { @class = "draft-format" })
