@model DodgeDynasty.Models.ManageDraftsModel

@{
	ViewBag.Title = "Manage Drafts";
}
@section scripts {
}
<div id="manageDrafts">
	<div class="large-page-header">@ViewBag.Title</div>
	<div class="page-entries">
		@{if (Model.LeagueId != null) {
			<div class="page-entry">
				<a href="../AddDraft/@Model.LeagueId">&lt;Add New Draft&gt;</a>
			</div>
		}}
		<div class="page-section">
			@foreach (var draft in Model.LeagueDrafts.OrderByDescending(o => o.LastUpdateTimestamp))
			{
				<div class="page-entry">
					<a href="@Url.Content("/Admin/EditDraft/" + draft.DraftId)">@draft.DraftYear @draft.LeagueName</a>
				</div>
			}
		</div>
	</div>

</div>