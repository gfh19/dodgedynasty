@{var model = new DodgeDynasty.Mappers.Shared.ColorStylesMapper().GetModel(); }
<style type="text/css">
@foreach (var color in model.Colors)
{	<text>
	.@color.ClassName
	{
		border-color: @color.ColorValue !important;
	}</text>
}
@{var highlightModel = new DodgeDynasty.Mappers.Highlights.HighlightsMapper().GetModel(); }
@foreach (var highlight in highlightModel.Highlights)
{	<text>
	.hq-color-span.@highlight.HighlightClass, .highlighted.on.@highlight.HighlightClass
	{
		background-color: @highlight.HighlightValue !important;
	}</text>
}
	.hq-color-span.bg-black, .highlighted.on.bg-black, .highlighted.on.bg-black .player-link {
		color: white !important;
	}
	.hq-color-span.bg-purple, .highlighted.on.bg-purple, .highlighted.on.bg-purple .player-link {
		color: white !important;
	}
	.hq-color-span.bg-maroon, .highlighted.on.bg-maroon, .highlighted.on.bg-maroon .player-link {
		color: white !important;
	}
</style>
<script type="text/javascript">
	var _highlightColors = [];
@foreach (var highlight in highlightModel.Highlights)
{	<text>_highlightColors.push('@highlight.HighlightClass');
	</text>}

</script>